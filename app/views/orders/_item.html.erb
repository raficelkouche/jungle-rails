<tr>
  <td>
    <%= image_tag "/uploads/product/image/#{item.id}/tiny_#{item.image}" %>
  </td>
  <td>
    <h4><%= item.name %></h4>
    <br>
    <p><%= item.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol item.item_price_cents/100 %>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol item.total_price_cents/100%>
  </td>
</tr>